# Telegram Configuration
TELEGRAM_BOT_TOKEN=        # From @BotFather
TELEGRAM_USER_ID=          # From @userinfobot (your personal Telegram ID)

# Claude Code CLI
CLAUDE_PATH=claude         # Path to Claude Code CLI binary
CLAUDE_MODEL=opus          # Default model: opus, sonnet, haiku

# Supabase (Persistent Memory)
SUPABASE_URL=              # From Supabase dashboard
SUPABASE_ANON_KEY=         # From Supabase dashboard

# User Profile
USER_NAME=                 # Your first name
USER_TIMEZONE=             # e.g., America/New_York, Europe/London

# Workspace
WORKSPACE_DIR=~/.claude-assistant/workspace
PROJECTS_DIR=~/.claude-assistant/projects
DATA_DIR=~/.claude-assistant/data

# Voice Transcription (Optional)
VOICE_PROVIDER=none        # "groq", "whisper", or "none"
GROQ_API_KEY=              # For Groq Whisper (free at console.groq.com)
WHISPER_BINARY=whisper-cpp # Path to whisper-cpp binary
WHISPER_MODEL=             # Path to whisper model file

# Proactive Behavior
ENABLE_PROACTIVE=true      # Enable smart check-ins and briefings
CHECKIN_INTERVAL=30        # Minutes between potential check-ins
BRIEFING_TIME=09:00        # Time for morning briefing (HH:MM)

# Agent Teams
ENABLE_AGENT_TEAMS=true    # Enable Claude Code agent teams support

# Development
LOG_LEVEL=info             # debug, info, warn, error
